<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCustomGameActivity">


    <TextView
        android:id="@+id/TVrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the range:" />

    <EditText
        android:id="@+id/ETlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="low"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/TVrange"/>

    <EditText
        android:id="@+id/EThigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="high"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/ETlow"/>

    <EditText
        android:id="@+id/ETamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="amount"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/EThigh"/>
    <CheckBox
        android:id="@+id/CBadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addition"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/ETamount" />

    <CheckBox
        android:id="@+id/CBsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtraction"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/CBadd" />

    <CheckBox
        android:id="@+id/CBdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Division"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/CBsub" />

    <CheckBox
        android:id="@+id/CBmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiply"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/CBdiv" />

    <CheckBox
        android:id="@+id/CBhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hints"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@+id/CBmul" />

    <CheckBox
        android:id="@+id/CBwrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow Wrong"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@+id/CBhint" />

    <Button
        android:id="@+id/Bcreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Game!"
        tools:text="Create Game!"
        app:layout_constraintTop_toBottomOf="@+id/CBwrong"/>



</android.support.constraint.ConstraintLayout>